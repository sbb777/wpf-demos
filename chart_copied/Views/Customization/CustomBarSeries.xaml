<UserControl
    x:Class="syncfusion.chartdemos.wpf.CustomBarSeries"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/CustomTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.DataContext>
            <local:ViewModelBar />
        </Grid.DataContext>
        
        <chart:SfChart Margin="10,10,15,10" AreaBorderBrush="Transparent"
                       Header="Car Speed Comparison">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    ShowGridLines="False" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    FontSize="10"
                    Header="Acceleration Rate"
                    Interval="75"
                    LabelFormat="0' Kmph'"
                    Maximum="300"
                    Minimum="0"
                    ShowGridLines="False" />
            </chart:SfChart.SecondaryAxis>

            <chart:BarSeries
                CustomTemplate="{StaticResource BarTemplate}"
                ItemsSource="{Binding}"
                Label="Gross Salary"
                LegendIcon="Pentagon"
                SegmentSpacing="0.9"
                XBindingPath="Month"
                YBindingPath="Value1" />

        </chart:SfChart>
    </Grid>
</UserControl>
