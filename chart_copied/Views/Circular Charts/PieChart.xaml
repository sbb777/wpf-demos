<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.PieChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:PieChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </democommon:DemoControl.Resources>

    <Grid>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Default Pie " />
                    </StackPanel>
                </TabItem.Header>
                <ContentControl x:Name="contentcontrol">
                    <Grid>
                        <Grid.Resources>
                            <local:PieChartColorConverter x:Key="colorConv"/>
                            <local:PieChartLabelConverter x:Key="labelconverter"/>
                            
                            <DataTemplate x:Key="legend">
                                <StackPanel Orientation="Horizontal">
                                    <Grid Margin="10,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Rectangle
                                            Width="15"
                                            Height="15"
                                            Fill="{Binding Interior}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="10,5,5,0"
                                            FontSize="16"
                                            Text="{Binding Item}" />
                                    </Grid>
                                </StackPanel>
                            </DataTemplate>

                            <DataTemplate x:Key="labelTemplate">
                                <Grid>
                                    <Rectangle Stroke="White" Fill="{Binding Converter={StaticResource colorConv}}" StrokeThickness="1"/>
                                    <TextBlock Margin="6,3,6,3" HorizontalAlignment="Center" VerticalAlignment="Top"
                                   FontSize="12" Foreground="White" Text="{Binding Converter={StaticResource labelconverter}}"/>
                                </Grid>
                            </DataTemplate>

                        </Grid.Resources>

                        <chart:SfChart
                            x:Name="pieChart"
                            Grid.RowSpan="2"
                            Margin="10,10,5,10"
                            HorizontalAlignment="Center"
                            Header="Internet usage in World">

                            <chart:SfChart.Legend>
                                <chart:ChartLegend
                                    x:Name="ChartLegend1"
                                    BorderThickness="1"
                                    Header="Country Details"
                                    DockPosition="Right"
                                    ItemMargin="0,8,0,0"/>
                            </chart:SfChart.Legend>

                            <chart:PieSeries
                                x:Name="pieSeries"
                                chart:ChartTooltip.EnableAnimation="True"
                                EnableAnimation="True"
                                EnableSmartLabels="True"
                                GroupMode="Value"
                                GroupTo="1000"
                                ItemsSource="{Binding Data}"
                                LabelPosition="OutsideExtended"
                                PieCoefficient="0.7"
                                XBindingPath="Country"
                                YBindingPath="Count"
                                Palette="Custom"
                                ColorModel="{StaticResource CustomColor}">
                                <chart:PieSeries.AdornmentsInfo>
                                    <chart:ChartAdornmentInfo
                                        ConnectorHeight="80"
                                        ShowConnectorLine="True"
                                        ShowLabel="True" 
                                        AdornmentsPosition="Bottom"
                                        LabelTemplate="{StaticResource labelTemplate}"
                                        UseSeriesPalette="True"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        SegmentLabelContent="LabelContentPath"/>
                                </chart:PieSeries.AdornmentsInfo>
                            </chart:PieSeries>
                        </chart:SfChart>
                    </Grid>
                </ContentControl>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" Semi Pie " />
                    </StackPanel>
                </TabItem.Header>
                <ContentControl x:Name="contentcontrol2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="1" BorderBrush="LightGray" Margin="0,-20,0,0" BorderThickness="1,0,0,0">
                            <Grid Margin="10,14">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    FontSize="16"
                                    Grid.Row="0"
                                    Margin="5,0,30,5"
                                    FontWeight="Bold"
                                    Text="OPTIONS" />

                                <TextBlock Grid.Row="1" Margin="5" FontSize="12" Text="Start Angle" />

                                <Slider
                                    x:Name="StartSlider" 
                                    HorizontalAlignment="Left"
                                    Grid.Row="2"
                                    Width="120"
                                    Margin="5,0,5,5"
                                    Maximum="360"
                                    Minimum="0"
                                    Value="{Binding StartAngle, Mode=TwoWay}" />

                                <TextBlock Margin="5" Grid.Row="3" FontSize="12" Text="End Angle" />

                                <Slider
                                    x:Name="EndSlider"
                                    HorizontalAlignment="Left"
                                    Grid.Row="4"
                                    Width="120"
                                    Margin="5,0,5,5"
                                    Maximum="360"
                                    Minimum="0"
                                    Value="{Binding EndAngle, Mode=TwoWay}" />
                            </Grid>
                        </Border>

                        <chart:SfChart
                            x:Name="PieChart"
                            Grid.Column="0" Margin="10,25,5,10"
                            Header="Application Performance Metrics">

                            <chart:PieSeries
                                x:Name="PieSeries"
                                EnableAnimation="True"
                                EnableSmartLabels="True"
                                EndAngle="{Binding EndAngle}"
                                ItemsSource="{Binding Metrics}"
                                LabelPosition="Outside"
                                StartAngle="{Binding StartAngle}"
                                XBindingPath="Utilization"
                                YBindingPath="ResponseTime"
                                ColorModel="{StaticResource CustomColor}"
                                Palette="Custom">
                                <chart:PieSeries.AdornmentsInfo>
                                    <chart:ChartAdornmentInfo
                                        AdornmentsPosition="Bottom"
                                        ConnectorHeight="37"
                                        SegmentLabelContent="Percentage"
                                        SegmentLabelFormat="##.#"
                                        ShowConnectorLine="True"
                                        ShowLabel="True"/>
                                </chart:PieSeries.AdornmentsInfo>

                            </chart:PieSeries>
                        </chart:SfChart>
                    </Grid>
                </ContentControl>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" Multiple Pie " />
                    </StackPanel>
                </TabItem.Header>
                <Grid x:Name="mainGrid">

                    <Grid.Resources>
                        <DataTemplate x:Key="labelTemplate1">
                            <TextBlock
                                Margin="5"
                                FontSize="10"
                                Foreground="White"
                                Text="{Binding Item.Continent}" />
                        </DataTemplate>

                        <DataTemplate x:Key="labelTemplate2">
                            <TextBlock
                                Margin="5"
                                FontSize="10"
                                Foreground="White"
                                Text="{Binding Item.Countries}" />
                        </DataTemplate>

                        <DataTemplate x:Key="labelTemplate3">
                            <TextBlock
                                Margin="5"
                                FontSize="10"
                                Foreground="White"
                                Text="{Binding Item.States}" />
                        </DataTemplate>
                    </Grid.Resources>

                    <chart:SfChart x:Name="pieChart1"
                                   Header="Most populated continents">

                        <chart:PieSeries
                            x:Name="pieSeries1"
                            EnableAnimation="True"
                            EnableSmartLabels="False"
                            ItemsSource="{Binding Population}"
                            LabelPosition="Inside"
                            Palette="Custom"
                            PieCoefficient="1"
                            Stroke="White"
                            XBindingPath="Continent"
                            YBindingPath="PopulationinContinents">
                            <chart:PieSeries.ColorModel>
                                <chart:ChartColorModel>
                                    <chart:ChartColorModel.CustomBrushes>
                                        <SolidColorBrush Color="{StaticResource SeriesOneColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesTwoColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesThreeColor}" />
                                    </chart:ChartColorModel.CustomBrushes>
                                </chart:ChartColorModel>
                            </chart:PieSeries.ColorModel>
                            <chart:PieSeries.AdornmentsInfo>
                                <chart:ChartAdornmentInfo
                                    AdornmentsPosition="Bottom"
                                    LabelTemplate="{StaticResource labelTemplate1}"
                                    SegmentLabelContent="LabelContentPath"
                                    ShowLabel="True" />
                            </chart:PieSeries.AdornmentsInfo>
                        </chart:PieSeries>

                        <chart:PieSeries
                            x:Name="pieSeries2"
                            EnableAnimation="True"
                            EnableSmartLabels="False"
                            ItemsSource="{Binding Population}"
                            LabelPosition="Inside"
                            Palette="Custom"
                            PieCoefficient="1"
                            Stroke="White"
                            XBindingPath="Countries"
                            YBindingPath="PopulationinCountries">
                            <chart:PieSeries.ColorModel>
                                <chart:ChartColorModel>
                                    <chart:ChartColorModel.CustomBrushes>
                                        <SolidColorBrush Color="{StaticResource SeriesOneColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesOneColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesTwoColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesTwoColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesThreeColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesThreeColor}" />
                                    </chart:ChartColorModel.CustomBrushes>
                                </chart:ChartColorModel>
                            </chart:PieSeries.ColorModel>
                            <chart:PieSeries.AdornmentsInfo>
                                <chart:ChartAdornmentInfo
                                    AdornmentsPosition="Bottom"
                                    LabelTemplate="{StaticResource labelTemplate2}"
                                    SegmentLabelContent="LabelContentPath"
                                    ShowLabel="True" />
                            </chart:PieSeries.AdornmentsInfo>
                        </chart:PieSeries>
                        <chart:PieSeries
                            x:Name="pieSeries3"
                            EnableAnimation="True"
                            EnableSmartLabels="False"
                            ItemsSource="{Binding Population}"
                            Label="Medal in 2015"
                            LabelPosition="Inside"
                            Palette="Custom"
                            PieCoefficient="1"
                            Stroke="White"
                            XBindingPath="States"
                            YBindingPath="PopulationinStates">
                            <chart:PieSeries.ColorModel>
                                <chart:ChartColorModel>
                                    <chart:ChartColorModel.CustomBrushes>
                                        <SolidColorBrush Color="{StaticResource SeriesOneColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesOneColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesOneColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesOneColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesTwoColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesTwoColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesTwoColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesTwoColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesThreeColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesThreeColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesThreeColor}" />
                                        <SolidColorBrush Color="{StaticResource SeriesThreeColor}" />
                                    </chart:ChartColorModel.CustomBrushes>
                                </chart:ChartColorModel>
                            </chart:PieSeries.ColorModel>
                            <chart:PieSeries.AdornmentsInfo>
                                <chart:ChartAdornmentInfo
                                    AdornmentsPosition="Bottom"
                                    LabelTemplate="{StaticResource labelTemplate3}"
                                    SegmentLabelContent="LabelContentPath"
                                    ShowLabel="True" />
                            </chart:PieSeries.AdornmentsInfo>
                        </chart:PieSeries>
                    </chart:SfChart>
                </Grid>
            </TabItem>

        </TabControl>

    </Grid>

</democommon:DemoControl>
