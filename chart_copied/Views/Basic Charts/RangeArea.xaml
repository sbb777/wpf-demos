<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.RangeAreaChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:RangeAreaChartViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="RangeAreaChart"
            Margin="10"
            HorizontalAlignment="Center"
            Header="Food Production">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    Header="Products"
                    LabelPlacement="BetweenTicks"
                    ShowGridLines="False" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Growth ( In Metric Tonnes )"
                    Interval="30"
                    Maximum="100"
                    Minimum="10" />
            </chart:SfChart.SecondaryAxis>

            <chart:RangeAreaSeries
                x:Name="RangeAreaSeries"
                High="Stock"
                ItemsSource="{Binding Products}"
                Label="Expenditures"
                Low="Price"
                StrokeThickness="3"
                Interior="{StaticResource SeriesInterior1WithOpacity}"
                XBindingPath="ProdName">
                <chart:RangeAreaSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Ellipse
                                        Width="30"
                                        Height="30"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Fill="White"
                                        Stroke="{StaticResource SeriesInterior1}"
                                        StrokeThickness="2" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe UI"
                                        FontSize="12"
                                        Foreground="Black"
                                        Text="{Binding}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>

                    </chart:ChartAdornmentInfo>
                </chart:RangeAreaSeries.AdornmentsInfo>
            </chart:RangeAreaSeries>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
