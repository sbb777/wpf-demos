<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.StackingBarChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:StackingBarChartViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="StackingColumnChart"
            Margin="10"
            Palette="Custom"
            ColorModel="{StaticResource CustomColor}"
            Header="Olympic Games Medal Details">

            <chart:SfChart.Legend>
                <chart:ChartLegend
                    DockPosition="Bottom"/>
            </chart:SfChart.Legend>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    Header="Country"
                    ShowGridLines="False"/>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Number of Medals"/>
            </chart:SfChart.SecondaryAxis>

            <chart:StackingBarSeries
                chart:ChartTooltip.EnableAnimation="True"
                EnableAnimation="True"
                ItemsSource="{Binding MedalDetails}"
                Label="Gold"
                XBindingPath="CountryName"
                YBindingPath="GoldMedals">
                <chart:StackingBarSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        LabelPosition="Inner"
                        ShowLabel="True" />
                </chart:StackingBarSeries.AdornmentsInfo>
            </chart:StackingBarSeries>

            <chart:StackingBarSeries
                chart:ChartTooltip.EnableAnimation="True"
                EnableAnimation="True"
                ItemsSource="{Binding MedalDetails}"
                Label="Silver"
                XBindingPath="CountryName"
                YBindingPath="SilverMedals">
                <chart:StackingBarSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        LabelPosition="Inner"
                        ShowLabel="True" />
                </chart:StackingBarSeries.AdornmentsInfo>
            </chart:StackingBarSeries>

            <chart:StackingBarSeries
                chart:ChartTooltip.EnableAnimation="True"
                EnableAnimation="True"
                ItemsSource="{Binding MedalDetails}"
                Label="Bronze"
                XBindingPath="CountryName"
                YBindingPath="BronzeMedals">
                <chart:StackingBarSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        LabelPosition="Inner"
                        ShowLabel="True" />
                </chart:StackingBarSeries.AdornmentsInfo>
            </chart:StackingBarSeries>
        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
