<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.StackedGroupChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">
    <democommon:DemoControl.DataContext>
        <local:StackingGroupViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="StackingColumnChart"
            Margin="10"
            Palette="Custom"
            ColorModel="{StaticResource CustomColor}"
            Header="Comparison of Company's Growth">

            <chart:SfChart.Legend>
                <chart:ChartLegend
                    DockPosition="Bottom"/>
            </chart:SfChart.Legend>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    Header="Year"
                    ShowGridLines="False"/>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Revenue In Millions"
                    RangePadding="Round" />
            </chart:SfChart.SecondaryAxis>

            <chart:StackingColumnSeries
                EnableAnimation="True"
                GroupingLabel="Group1"
                ItemsSource="{Binding AnnualDetails}"
                Label="Quarter 1"
                LegendIcon="SeriesType"
                XBindingPath="Year"
                YBindingPath="Quarter1">
                <chart:StackingColumnSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True" />
                </chart:StackingColumnSeries.AdornmentsInfo>
            </chart:StackingColumnSeries>
            <chart:StackingColumnSeries
                EnableAnimation="True"
                GroupingLabel="Group1"
                ItemsSource="{Binding AnnualDetails}"
                Label="Quarter 2"
                LegendIcon="SeriesType"
                XBindingPath="Year"
                YBindingPath="Quarter2">
                <chart:StackingColumnSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True" />
                </chart:StackingColumnSeries.AdornmentsInfo>
            </chart:StackingColumnSeries>
            <chart:StackingColumnSeries
                EnableAnimation="True"
                GroupingLabel="Group2"
                ItemsSource="{Binding AnnualDetails}"
                Label="Quarter 3"
                LegendIcon="SeriesType"
                XBindingPath="Year"
                YBindingPath="Quarter3">
                <chart:StackingColumnSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True" />
                </chart:StackingColumnSeries.AdornmentsInfo>
            </chart:StackingColumnSeries>
            <chart:StackingColumnSeries
                EnableAnimation="True"
                GroupingLabel="Group2"
                ItemsSource="{Binding AnnualDetails}"
                Label="Quarter 4"
                LegendIcon="SeriesType"
                XBindingPath="Year"
                YBindingPath="Quarter4">
                <chart:StackingColumnSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True" />
                </chart:StackingColumnSeries.AdornmentsInfo>
            </chart:StackingColumnSeries>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
