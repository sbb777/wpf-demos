<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.MultipleSeriesDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interact="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <democommon:DemoControl.DataContext>
        <local:DataGenerator />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Options>
        <StackPanel>
            <TextBlock
                x:Name="timeTaken"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontSize="18"
                FontWeight="Bold"
                Text="{Binding TimeTaken, Mode=TwoWay}" />
            <Button
                Grid.Column="1"
                Margin="5"
                Padding="8"
                HorizontalAlignment="Center"
                BorderThickness="2"
                Content="Load 500 * 500 Points"
                Tag="{Binding Source={x:Reference Name=lineChart}}">

                <interact:Interaction.Behaviors>
                    <local:SeriesGenerateBehavior />
                </interact:Interaction.Behaviors>

            </Button>
        </StackPanel>
    </democommon:DemoControl.Options>

    <Grid x:Name="LayoutRoot" Margin="10">

        <Grid>
            <chart:SfChart
                x:Name="lineChart"
                Grid.Row="1"
                Grid.RowSpan="2"
                Margin="10,10,30,10"
                IsManipulationEnabled="True"
                Header="Multiple Series Generator">

                <interact:Interaction.Behaviors>
                    <local:ChartTimerBehavior />
                </interact:Interaction.Behaviors>

                <chart:SfChart.PrimaryAxis>
                    <chart:CategoryAxis
                        LabelFormat="mm:ss"
                        ShowGridLines="False"
                        Header="Time">
                    </chart:CategoryAxis>
                </chart:SfChart.PrimaryAxis>

                <chart:SfChart.SecondaryAxis>
                    <chart:NumericalAxis
                        Interval="10"
                        Header="Value">
                    </chart:NumericalAxis>
                </chart:SfChart.SecondaryAxis>

            </chart:SfChart>

        </Grid>

    </Grid>
</democommon:DemoControl>
