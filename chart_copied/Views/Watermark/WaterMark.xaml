<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.WaterMark"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:SneakerDetail />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>

        <!--  Template Axis Labels  -->
        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="12" Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="WatermarkChart"
            Margin="20,10,20,10"
            FontSize="18">
            <chart:SfChart.Watermark>
                <chart:Watermark Canvas.ZIndex="-1">
                    <chart:Watermark.Content>
                        <TextBlock
                            Margin="8,8,-39,-133"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="100"
                            Foreground="#FFB5B5B8"
                            Opacity="0.2"
                            RenderTransformOrigin="0.1,0.5"
                            Text="Sample Data">
                            <TextBlock.RenderTransform>
                                <RotateTransform Angle="335" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </chart:Watermark.Content>
                </chart:Watermark>
            </chart:SfChart.Watermark>

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,20"
                    FontFamily="Seoge UI"
                    FontSize="18"
                    Text="Production Details" />
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    FontSize="16"
                    Header="Brand Name"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    PlotOffset="20" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    FontSize="16"
                    Header="Total Items"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="40"
                    Minimum="0" />
            </chart:SfChart.SecondaryAxis>

            <chart:LineSeries
                ColorModel="{StaticResource CustomColor}"
                ItemsSource="{Binding SneakerDetails}"
                Palette="Custom"
                ShowTooltip="True"
                StrokeThickness="20"
                XBindingPath="Brand"
                YBindingPath="ItemsCount">
                <chart:LineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo ShowLabel="True" Symbol="Ellipse">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Ellipse
                                        Width="35"
                                        Height="35"
                                        Fill="White"
                                        Stroke="SeaGreen"
                                        StrokeThickness="2" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe UI"
                                        FontSize="14"
                                        Foreground="SeaGreen"
                                        Text="{Binding}" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:LineSeries.AdornmentsInfo>
            </chart:LineSeries>
        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
