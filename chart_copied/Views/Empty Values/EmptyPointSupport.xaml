<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.EmptyPointSupportDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:EmptyPointSupportViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Options>
        <StackPanel Margin="0">
            <TextBlock
                HorizontalAlignment="Left"
                FontSize="12"
                Margin="5" 
                FontWeight="Bold"
                Text="Properties" />

            <TextBlock
                Name="EmptyPointStyle"
                Margin="5" 
                FontSize="12"
                Text="EmptyPointStyle" />
            <ComboBox
                Name="EmptyPointStyles"
                Margin="5,0,5,5"
                FontSize="12"
                IsEditable="False"
                ItemsSource="{democommon:EnumValuesExtension Type=chart:EmptyPointStyle}"
                SelectedIndex="0">
            </ComboBox>

            <TextBlock
                Name="EmptyPointValue"
                Margin="5"
                FontSize="12"
                Text="EmptyPointValue" />
            <ComboBox
                Name="EmptyPointValues"
                Margin="5,0,5,5"
                FontSize="12"
                IsEditable="False"
                ItemsSource="{democommon:EnumValuesExtension Type=chart:EmptyPointValue}"
                SelectedIndex="1">
            </ComboBox>

            <TextBlock Margin="5" FontSize="12" Text="EmptyPointInterior" />
            <ComboBox
                Name="EmptyPointInterior"
                HorizontalAlignment="Stretch"
                Margin="5,0,5,5"
                FontSize="12"
                ItemsSource="{Binding ColorArray}"
                SelectedIndex="2">
            </ComboBox>
        </StackPanel>
    </democommon:DemoControl.Options>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="EmptyPointChart"
            Margin="10"
            VerticalAlignment="Center"
            Palette="Custom"
            ColorModel="{StaticResource CustomColor}"
            Header="New Products Count by Year">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    x:Name="Categor"
                    Header="Year"
                    ShowGridLines="False"
                    PlotOffset="10" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Count"
                    Interval="1"/>
            </chart:SfChart.SecondaryAxis>

            <chart:ColumnSeries
                EmptyPointInterior="{Binding ElementName=EmptyPointInterior, Path=SelectedItem}"
                EmptyPointValue="{Binding ElementName=EmptyPointValues, Path=SelectedItem, Mode=TwoWay}"
                EmptyPointStyle="{Binding ElementName=EmptyPointStyles, Path=SelectedItem,Mode=TwoWay}"
                EnableAnimation="False"
                ItemsSource="{Binding Data}"
                ShowEmptyPoints="True"
                XBindingPath="Year"
                YBindingPath="Count">
                <chart:ColumnSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True"
                        Background="Transparent">
                    </chart:ChartAdornmentInfo>
                </chart:ColumnSeries.AdornmentsInfo>
            </chart:ColumnSeries>

        </chart:SfChart>

    </Grid>
</democommon:DemoControl>
