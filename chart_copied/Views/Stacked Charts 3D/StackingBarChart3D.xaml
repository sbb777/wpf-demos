<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.StackingBarChart3D"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:StackingBarChart3DViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <local:StackingBarChart3DColorConverter x:Key="colorConv" />
        <local:TextConverter x:Key="txtconv" />

        <!--  Adornment Label Template  -->
        <DataTemplate x:Key="labelTemplate1">
            <Grid>
                <Rectangle
                    Fill="{Binding Converter={StaticResource colorConv}}"
                    Stroke="White"
                    StrokeThickness="1" />
                <TextBlock
                    Margin="6,3,6,3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="10"
                    Foreground="White"
                    Text="{Binding Converter={StaticResource txtconv}}" />
            </Grid>
        </DataTemplate>

    </democommon:DemoControl.Resources>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart3D
            x:Name="columnChart"
            Margin="50"
            VerticalAlignment="Bottom"
            Depth="130"
            EnableRotation="True"
            PerspectiveAngle="125.39325842696624"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom"
            Rotation="29"
            SideBySideSeriesPlacement="True">

            <!--  PrimaryAxis  -->
            <chart:SfChart3D.PrimaryAxis>
                <chart:CategoryAxis3D TickLineSize="2">
                </chart:CategoryAxis3D>
            </chart:SfChart3D.PrimaryAxis>

            <!--  SecondaryAxis  -->
            <chart:SfChart3D.SecondaryAxis>
                <chart:NumericalAxis3D
                    Interval="10"
                    OpposedPosition="False"
                    RangePadding="None"
                    TickLineSize="2">
                </chart:NumericalAxis3D>
            </chart:SfChart3D.SecondaryAxis>

            <!--  StackingBarSeries3D  -->
            <chart:StackingBarSeries3D
                chart:ChartTooltip.EnableAnimation="True"
                EnableAnimation="True"
                ItemsSource="{Binding CategoricalDatas}"
                Label="First"
                XBindingPath="Year"
                YBindingPath="Plastic"
                Interior="{StaticResource SeriesInterior1}">
                <!--  AdornmentsInfo  -->
                <chart:StackingBarSeries3D.AdornmentsInfo>
                    <chart:ChartAdornmentInfo3D
                        AdornmentsPosition="TopAndBottom"
                        LabelTemplate="{StaticResource labelTemplate1}"
                        SegmentLabelContent="LabelContentPath"
                        ShowLabel="True" />
                </chart:StackingBarSeries3D.AdornmentsInfo>
            </chart:StackingBarSeries3D>

            <chart:StackingBarSeries3D
                chart:ChartTooltip.EnableAnimation="True"
                EnableAnimation="True"
                ItemsSource="{Binding CategoricalDatas}"
                Label="First"
                XBindingPath="Year"
                YBindingPath="Metal"
                Interior="{StaticResource SeriesInterior2}">
                <!--  AdornmentsInfo  -->
                <chart:StackingBarSeries3D.AdornmentsInfo>
                    <chart:ChartAdornmentInfo3D
                        AdornmentsPosition="TopAndBottom"
                        LabelTemplate="{StaticResource labelTemplate1}"
                        SegmentLabelContent="LabelContentPath"
                        ShowLabel="True" />
                </chart:StackingBarSeries3D.AdornmentsInfo>
            </chart:StackingBarSeries3D>

        </chart:SfChart3D>
    </Grid>
</democommon:DemoControl>
