<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.StripLineDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <Grid Margin="15">

        <Grid.DataContext>
            <local:StripLinesViewModel />
        </Grid.DataContext>

        <Grid.Resources>

            <DataTemplate x:Key="adornment">
                <Grid Margin="0,0,0,30">
                    <Rectangle
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Fill="White"
                        RadiusX="5"
                        RadiusY="5"
                        Stroke="#333333" />
                    <TextBlock
                        Margin="7.5,3,7.5,3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI Symbol"
                        FontSize="12"
                        FontWeight="Regular"
                        Foreground="#FF585858"
                        Text="{Binding}"
                        TextWrapping="Wrap" />
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="adornShape">
                <Ellipse
                    Width="10"
                    Height="10"
                    Fill="Goldenrod"
                    Stroke="Black"
                    StrokeThickness="1" />
            </DataTemplate>

        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.53*" />
        </Grid.RowDefinitions>

        <chart:SfChart
            x:Name="StriplineDemoChart"
            Grid.Row="0"
            AreaBorderThickness="0,1,1,1">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    Header="Months"
                    OpposedPosition="True"
                    PlotOffset="25" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Temperature in Celsius"
                    Interval="4"
                    Maximum="52"
                    Minimum="28"
                    PlotOffset="25"
                    LabelFormat="0°C">
                    <chart:NumericalAxis.StripLines>
                        <chart:ChartStripLine
                            Width="8"
                            Background="#C8D16D"
                            IsPixelWidth="False"
                            Label="Low Temperature"
                            LabelAngle="0"
                            LabelHorizontalAlignment="Center"
                            LabelVerticalAlignment="Center"
                            Start="28" />

                        <chart:ChartStripLine
                            Width="8"
                            Background="#F4C762"
                            IsPixelWidth="False"
                            Label="Average Temperature"
                            LabelAngle="0"
                            LabelHorizontalAlignment="Center"
                            LabelVerticalAlignment="Center"
                            Start="36" />

                        <chart:ChartStripLine
                            Width="8"
                            Background="#EF7878"
                            IsPixelWidth="False"
                            Label="High Temperature"
                            LabelAngle="0"
                            LabelHorizontalAlignment="Center"
                            LabelVerticalAlignment="Center"
                            Start="44" />
                    </chart:NumericalAxis.StripLines>
                </chart:NumericalAxis>
            </chart:SfChart.SecondaryAxis>

            <!--  Add Series to the Chart  -->
            <chart:SplineSeries
                Interior="#333333"
                ItemsSource="{Binding ClimateData}"
                Label="Sports"
                XBindingPath="Month"
                YBindingPath="Temperature">
                <chart:SplineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        LabelTemplate="{StaticResource adornment}"
                        ShowLabel="True"
                        ShowMarker="True"
                        Symbol="Custom"
                        SymbolTemplate="{StaticResource adornShape}" />
                </chart:SplineSeries.AdornmentsInfo>
            </chart:SplineSeries>

        </chart:SfChart>

        <chart:SfChart Grid.Row="2" AreaBorderThickness="0,1,1,1">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    EdgeLabelsDrawingMode="Shift"
                    PlotOffset="25"
                    Visibility="Collapsed">
                    <chart:CategoryAxis.StripLines>
                        <chart:ChartStripLine
                            Width="2.65"
                            Background="#E8BD6B"
                            BorderBrush="Black"
                            BorderThickness="0"
                            IsPixelWidth="False"
                            Label="Quarter 1"
                            LabelAngle="90"
                            LabelHorizontalAlignment="Center"
                            LabelVerticalAlignment="Center"
                            Start="0" />
                        <chart:ChartStripLine
                            Width="2.85"
                            Background="#FFFBCE"
                            BorderBrush="Black"
                            BorderThickness="0"
                            IsPixelWidth="False"
                            Label="Quarter 2"
                            LabelAngle="90"
                            LabelHorizontalAlignment="Center"
                            LabelVerticalAlignment="Center"
                            Start="2.65" />
                        <chart:ChartStripLine
                            Width="2.85"
                            Background="#AAAA9A"
                            BorderBrush="Black"
                            BorderThickness="0"
                            IsPixelWidth="False"
                            Label="Quarter 3"
                            LabelAngle="90"
                            LabelHorizontalAlignment="Center"
                            LabelVerticalAlignment="Center"
                            Start="5.5" />
                        <chart:ChartStripLine
                            Width="2.65"
                            Background="#F3F3E9"
                            BorderBrush="Black"
                            BorderThickness="0"
                            IsPixelWidth="False"
                            Label="Quarter 4"
                            LabelAngle="90"
                            LabelHorizontalAlignment="Center"
                            LabelVerticalAlignment="Center"
                            Start="8.35" />
                    </chart:CategoryAxis.StripLines>
                </chart:CategoryAxis>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Temperature in Celsius"
                    Interval="4"
                    Maximum="52"
                    Minimum="28"
                    PlotOffset="25"
                    LabelFormat="0°C"/>
            </chart:SfChart.SecondaryAxis>

            <chart:SplineSeries
                Interior="#333333"
                ItemsSource="{Binding ClimateData}"
                Label="Sports"
                XBindingPath="Month"
                YBindingPath="Temperature">
                <chart:SplineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        LabelTemplate="{StaticResource adornment}"
                        ShowLabel="True"
                        ShowMarker="True"
                        Symbol="Custom"
                        SymbolTemplate="{StaticResource adornShape}" />
                </chart:SplineSeries.AdornmentsInfo>

            </chart:SplineSeries>

        </chart:SfChart>

    </Grid>
</democommon:DemoControl>
