<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.ErrorBarSeriesDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:library="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    OptionsSize="280">

    <democommon:DemoControl.Resources>
        <democommon:VisibilityToBoolConverter x:Key="visibilitytoBoolConverter"/>
        <democommon:EnumDisplayNameConverter x:Key="enumDisplayNameConverter" />
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.DataContext>
        <local:EnergyProductionDataSample />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Options>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <Expander
                    Width="250"
                    FontSize="13"
                    Header="ErrorBar Series Properties"
                    IsExpanded="False">
                    <StackPanel>
                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Error Type" />
                        <ComboBox
                            x:Name="TypeCombo"
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            FontSize="12"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:ErrorBarType}"
                            SelectedIndex="0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource enumDisplayNameConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Error Mode" />
                        <ComboBox
                            x:Name="ModeCombo"
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            FontSize="12"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:ErrorBarMode}"
                            SelectedIndex="2">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource enumDisplayNameConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Horizontal ErrorValue" />
                        <TextBox
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            Text="{Binding ElementName=Errorseries, Path=HorizontalErrorValue}"
                            ToolTip="Set the horizontal error value for the Error Bar types Fixed and Percentage." />
                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Vertical ErrorValue" />
                        <TextBox
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            Text="{Binding ElementName=Errorseries, Path=VerticalErrorValue}"
                            ToolTip="Set the vertical error value for the Error Bar types Fixed and Percentage." />
                    </StackPanel>
                </Expander>
                <Expander
                    Width="250"
                    FontSize="13"
                    Header="Horizontal LineStyle Properties"
                    IsExpanded="False">
                    <StackPanel>

                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Stroke" />
                        <syncfusion:ColorPicker
                            Name="HorLineStroke"
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            BrushMode="Solid"
                            Brush="{Binding ElementName=horizontalLineStyle, Path=Stroke, Mode=TwoWay}" />

                        <TextBlock
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Stroke Thickness" />
                        <Slider
                            Name="HorThickness"
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Maximum="10"
                            Minimum="1"
                            Value="{Binding ElementName=horizontalLineStyle, Path=StrokeThickness}" />

                        <TextBlock
                            Name="HorDash"
                            Margin="5"
                            FontSize="12"
                            Text="Stroke Dash Array" />
                        <ComboBox
                            x:Name="Stroke"
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            IsEditable="False"
                            ItemsSource="{Binding StrokeDashArray}"
                            SelectedIndex="3"
                            SelectedItem="{Binding ElementName=horizontalLineStyle, Path=StrokeDashArray, Mode=TwoWay}" />
                    </StackPanel>
                </Expander>
                <Expander
                    Width="250"
                    FontSize="13"
                    Header="Vertical LineStyle Properties"
                    IsExpanded="False">
                    <StackPanel>

                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Stroke" />
                        <syncfusion:ColorPicker
                            Name="Verlinestroke"
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            BrushMode="Solid"
                            Brush="{Binding ElementName=verticalLineStyle, Path=Stroke,Mode=TwoWay}" />

                        <TextBlock
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Stroke Thickness" />
                        <Slider
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Maximum="10"
                            Minimum="1"
                            Value="{Binding ElementName=verticalLineStyle, Path=StrokeThickness}" />

                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Stroke Dash Array" />
                        <ComboBox
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            IsEditable="False"
                            ItemsSource="{Binding StrokeDashArray}"
                            SelectedIndex="3"
                            SelectedItem="{Binding ElementName=verticalLineStyle, Path=StrokeDashArray, Mode=TwoWay}" />
                    </StackPanel>
                </Expander>
                <Expander
                    Width="250"
                    FontSize="13"
                    Header="Horizontal Cap LineStyle Properties"
                    IsExpanded="False">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Text="CapVisibility" /> 
                            <CheckBox
                                Margin="5"
                                VerticalAlignment="Center"
                                IsChecked="{Binding ElementName=horizontalCapLineStyle, Path=Visibility, Converter={StaticResource visibilitytoBoolConverter}}" />
                        </StackPanel>
                        
                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Cap Width" />
                        <Slider
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="200"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="5,0,5,5"
                            Maximum="20"
                            Minimum="5"
                            Value="{Binding ElementName=Errorseries, Path=HorizontalCapLineStyle.LineWidth}" />

                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Stroke" />
                        <syncfusion:ColorPicker
                            Name="HorizontalCapStroke"
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            BrushMode="Solid"
                            Brush="{Binding ElementName=horizontalCapLineStyle, Path=Stroke, Mode=TwoWay}" />

                        <TextBlock
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Stroke Thickness" />
                        <Slider
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Maximum="10"
                            Minimum="1"
                            Value="{Binding ElementName=Errorseries, Path=HorizontalCapLineStyle.StrokeThickness}" />
                    </StackPanel>
                </Expander>
                <Expander
                    Width="250"
                    FontSize="13"
                    Header="Vertical Cap LineStyle Properties"
                    IsExpanded="False">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Text="Cap Visibility" />
                            <CheckBox
                                Margin="5"
                                VerticalAlignment="Center"
                                IsChecked="{Binding ElementName=verticalCapLineStyle, Path=Visibility, Converter={StaticResource visibilitytoBoolConverter}}" />
                        </StackPanel>
                        
                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Cap Width" />
                        <Slider
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Maximum="20"
                            Minimum="5"
                            Value="{Binding ElementName=Errorseries, Path=VerticalCapLineStyle.LineWidth}" />

                        <TextBlock
                            Margin="5"
                            FontSize="12"
                            Text="Stroke" />
                        <syncfusion:ColorPicker
                            Name="VerticalCapStroke"
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            BrushMode="Solid"
                            Brush="{Binding ElementName=verticalCapLineStyle, Path=Stroke, Mode=TwoWay}" />

                        <TextBlock
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Stroke Thickness" />
                        <Slider
                            Width="200"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Maximum="10"
                            Minimum="1"
                            Value="{Binding ElementName=Errorseries, Path=VerticalCapLineStyle.StrokeThickness}" />
                    </StackPanel>
                </Expander>
            </WrapPanel>
        </ScrollViewer>
    </democommon:DemoControl.Options>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <chart:SfChart
            Name="sfchart"
            Grid.Column="0"
            Margin="10"
            VerticalAlignment="Top"
            Header="Lab Experiment Details">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    PlotOffset="10"
                    Header="Experiment Id">
                </chart:CategoryAxis>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis Header="Measurements (ml)">
                </chart:NumericalAxis>
            </chart:SfChart.SecondaryAxis>

            <chart:ErrorBarSeries
                Name="Errorseries"
                HorizontalErrorPath="HorizontalErrorValue"
                HorizontalErrorValue="1"
                ItemsSource="{Binding EnergyProductions}"
                Mode="{Binding ElementName=ModeCombo, Path=SelectedItem, Converter={StaticResource enumDisplayNameConverter}, Mode=TwoWay}"
                Type="{Binding ElementName=TypeCombo, Path=SelectedItem, Converter={StaticResource enumDisplayNameConverter}, Mode=TwoWay}"
                VerticalErrorPath="VerticalErrorValue"
                VerticalErrorValue="50"
                XBindingPath="ID"
                YBindingPath="Coal">
                <chart:ErrorBarSeries.HorizontalLineStyle>
                    <chart:LineStyle
                        x:Name="horizontalLineStyle"
                        Stroke="#FFC36AC3"
                        StrokeDashArray="1,0"
                        StrokeThickness="2" />
                </chart:ErrorBarSeries.HorizontalLineStyle>
                <chart:ErrorBarSeries.VerticalLineStyle>
                    <chart:LineStyle
                        x:Name="verticalLineStyle"
                        Stroke="#FFC36AC3"
                        StrokeDashArray="1,0"
                        StrokeThickness="2" />
                </chart:ErrorBarSeries.VerticalLineStyle>
                <chart:ErrorBarSeries.HorizontalCapLineStyle>
                    <chart:CapLineStyle
                        x:Name="horizontalCapLineStyle"
                        LineWidth="5"
                        Stroke="#FF4F3A53"
                        StrokeThickness="2" />
                </chart:ErrorBarSeries.HorizontalCapLineStyle>
                <chart:ErrorBarSeries.VerticalCapLineStyle>
                    <chart:CapLineStyle
                        x:Name="verticalCapLineStyle"
                        LineWidth="5"
                        Stroke="#FF4F3A53"
                        StrokeThickness="2" />
                </chart:ErrorBarSeries.VerticalCapLineStyle>
            </chart:ErrorBarSeries>

            <chart:ScatterSeries
                ItemsSource="{Binding EnergyProductions}"
                Label="Coal"
                Interior="#A4C5F4"
                Stroke= "{Binding ElementName=horizontalLineStyle, Path=Stroke}" 
                ScatterHeight="20"
                ScatterWidth="20"
                XBindingPath="ID"
                YBindingPath="Coal" />

        </chart:SfChart>

    </Grid>

</democommon:DemoControl>