<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.BoxAndWhiskerChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:BoxWhiskerChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Options>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock Margin="5" Text="Box Plot Mode" />
            <ComboBox
                x:Name="percentileModeCombo"
                Grid.Row="1"
                Margin="5,0,5,5"
                ItemsSource="{democommon:EnumValuesExtension Type=chart:BoxPlotMode}"
                SelectedIndex="0">
            </ComboBox>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <CheckBox
                    x:Name="meanCheck"
                    Margin="5"
                    IsChecked="True" />
                <TextBlock
                    Margin="5"
                    Text="Show Median" />
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <CheckBox
                    x:Name="outlierCheck"
                    Margin="5"
                    IsChecked="True" />
                <TextBlock
                    Margin="5"
                    Text="Show Outlier" />
            </StackPanel>
        </Grid>
    </democommon:DemoControl.Options>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="boxWhiskerChart"
            Margin="10"
            VerticalAlignment="Bottom"
            Header="Employees age group in various departments">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    Header="Department"
                    LabelPlacement="BetweenTicks"
                    ShowGridLines="False" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Age"
                    Interval="10"
                    Minimum="10" />
            </chart:SfChart.SecondaryAxis>

            <chart:BoxAndWhiskerSeries
                x:Name="boxSeries"
                BoxPlotMode="{Binding ElementName=percentileModeCombo, Path=SelectedItem}"
                EnableAnimation="True"
                ItemsSource="{Binding BoxWhiskerData}"
                Palette="Custom"
                ColorModel="{StaticResource CustomColor}"
                ShowMedian="{Binding ElementName=meanCheck, Path=IsChecked}"
                ShowOutlier="{Binding ElementName=outlierCheck, Path=IsChecked}"
                ShowTooltip="True"
                XBindingPath="Department"
                YBindingPath="Age" />

        </chart:SfChart>
    </Grid>

</democommon:DemoControl>