<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.FastStackingColumnChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:FastStackingColumnChartViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <chart:SfChart
            x:Name="FastStackingColumn"
            Margin="10"
            HorizontalAlignment="Center"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom"
            Header="Microsoft Stock Market Trend Analysis">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    x:Name="axis1"
                    Header="Product Id"
                    ShowGridLines="False" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Price in USD"
                    RangePadding="Round" />
            </chart:SfChart.SecondaryAxis>

            <chart:FastStackingColumnBitmapSeries
                ItemsSource="{Binding MedalDetails}"
                Label="Gold"
                ShowTooltip="True"
                XBindingPath="CountryName"
                YBindingPath="GoldMedals" />
            <chart:FastStackingColumnBitmapSeries
                ItemsSource="{Binding MedalDetails}"
                Label="Silver"
                ShowTooltip="True"
                XBindingPath="CountryName"
                YBindingPath="SilverMedals" />
            <chart:FastStackingColumnBitmapSeries
                ItemsSource="{Binding MedalDetails}"
                Label="Bronze"
                ShowTooltip="True"
                XBindingPath="CountryName"
                YBindingPath="BronzeMedals" />

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
