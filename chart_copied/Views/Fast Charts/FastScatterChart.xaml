<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.FastScatterChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:FastScatterChartViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <chart:SfChart
            x:Name="FastScatter"
            Margin="10"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom"
            HorizontalAlignment="Center"
            Header="Faithful Eruptions">

            <chart:SfChart.PrimaryAxis>
                <chart:NumericalAxis
                    Interval="0.5" 
                    Maximum="5.5" 
                    Minimum="1.5" 
                    Header="Eruption Duration(Min)"/>
            </chart:SfChart.PrimaryAxis>
            
            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Interval="10" 
                    Maximum="100" 
                    Minimum="40" 
                    Header="Waiting Time Between Eruptions(Min)" />
            </chart:SfChart.SecondaryAxis>

            <chart:FastScatterBitmapSeries
                ItemsSource="{Binding DataCollection}"
                ShowTooltip="True" 
                ScatterHeight="7" 
                ScatterWidth="7"
                XBindingPath="Eruptions" 
                YBindingPath="WaitingTime" />

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
