<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.FastRangeAreaChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:FastRangeAreaChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <local:DegreeFormatConverter x:Key="degreeFormateConverter" />
        <local:CornerRadiusConverter x:Key="cornerRadiusConverter" />

        <DataTemplate x:Key="rangeSeriesTrackBallLabel">
            <Grid>
                <Border
                    Background="{Binding Interior}"
                    BorderBrush="{Binding BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="{Binding Converter={StaticResource cornerRadiusConverter}, ConverterParameter={x:Reference Name=FastRangeAreaChart}}">
                    <StackPanel Margin="4" Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                FontSize="13"
                                Foreground="{Binding Foreground}"
                                Text="Date">
                                <Run Text=" :" />
                            </TextBlock>
                            <TextBlock
                                Grid.Column="1"
                                Padding="3,0,0,0"
                                FontSize="13"
                                Foreground="{Binding Foreground}"
                                Text="{Binding Path=Item.Date, StringFormat=d}" />
                        </Grid>
                        <Separator BorderBrush="White" BorderThickness="1" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                FontSize="13"
                                Foreground="{Binding Foreground}"
                                Text="High">
                                <Run Text=" :" />
                            </TextBlock>
                            <TextBlock
                                Grid.Column="1"
                                Padding="3,0,0,0"
                                FontSize="13"
                                Foreground="{Binding Foreground}"
                                Text="{Binding High, Converter={StaticResource degreeFormateConverter}}" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                FontSize="13"
                                Foreground="{Binding Foreground}"
                                Text="Low">
                                <Run Text="  :" />
                            </TextBlock>
                            <TextBlock
                                Grid.Column="1"
                                Padding="3,0,0,0"
                                FontSize="13"
                                Foreground="{Binding Foreground}"
                                Text="{Binding Low, Converter={StaticResource degreeFormateConverter}}" />
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

    </democommon:DemoControl.Resources>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <chart:SfChart
            x:Name="FastRangeAreaChart"
            Margin="10"
            HorizontalAlignment="Center"
            Header="Temperature Analysis - 2017" 
            Palette="Custom" 
            ColorModel="{StaticResource CustomColor}">

            <chart:SfChart.Behaviors>
                <chart:ChartTrackBallBehavior ShowLine="False" UseSeriesPalette="True" />
                <chart:ChartZoomPanBehavior EnableZoomingToolBar="True" />
            </chart:SfChart.Behaviors>

            <chart:SfChart.PrimaryAxis>
                <chart:DateTimeAxis
                    x:Name="dateTimeAxis"
                    Header="Date"
                    ShowGridLines="False"
                    LabelFormat="MMM dd"
                    RangePadding="None" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Temperature in Celcius"
                    RangePadding="Round" />
            </chart:SfChart.SecondaryAxis>

            <chart:FastRangeAreaBitmapSeries
                EnableAntiAliasing="True"
                High="HighTemperature"
                ItemsSource="{Binding List}"
                Label="Expenditures"
                Low="LowTemperature"
                TrackBallLabelTemplate="{StaticResource rangeSeriesTrackBallLabel}"
                XBindingPath="Date" />

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
