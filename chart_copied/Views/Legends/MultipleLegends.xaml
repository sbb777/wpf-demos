<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.MultipleLegendsDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    OptionsSize="300">

    <democommon:DemoControl.Resources>

        <chart:CategoryAxis
            x:Key="catAxis"
            chart:SfChart.Column="1"
            PlotOffset="10"/>
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.DataContext>
        <local:MultiLegendsViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Options>
        <StackPanel>
            <GroupBox
                Width="250"
                Margin="5"
                HorizontalAlignment="Left">
                <GroupBox.Header>
                    <TextBlock
                        Margin="5"
                        FontWeight="Bold"
                        Text="1st Column" />
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="LegendPosition" />
                    <ComboBox
                        Name="LegendPosition"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        IsEditable="False"
                        ItemsSource="{democommon:EnumValuesExtension Type=chart:LegendPosition}"
                        SelectedIndex="1" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="DockPosition" />
                    <ComboBox
                        Name="DockPosition"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        IsEditable="False"
                        ItemsSource="{democommon:EnumValuesExtension Type=chart:ChartDock}"
                        SelectedIndex="1" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="OffsetX" />
                    <Slider
                        Name="OffsetX"
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5"
                        Maximum="500"
                        Minimum="0"
                        Value="0" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="OffsetY" />
                    <Slider
                        Name="OffsetY"
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="5"
                        Maximum="500"
                        Minimum="0"
                        Value="0" />
                </Grid>
            </GroupBox>

            <GroupBox
                Width="250"
                Margin="5"
                HorizontalAlignment="Left">
                <GroupBox.Header>
                    <TextBlock
                        Margin="5"
                        FontWeight="Bold"
                        Text="2nd Column" />
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="LegendPosition" />
                    <ComboBox
                        Name="LegendPosition2"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        IsEditable="False"
                        ItemsSource="{democommon:EnumValuesExtension Type=chart:LegendPosition}"
                        SelectedIndex="1" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="DockPosition" />
                    <ComboBox
                        Name="DockPosition2"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        IsEditable="False"
                        ItemsSource="{democommon:EnumValuesExtension Type=chart:ChartDock}"
                        SelectedIndex="1" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="OffsetX" />
                    <Slider
                        Name="OffsetX2"
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5"
                        Maximum="300"
                        Minimum="0"
                        Value="0" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="OffsetY" />
                    <Slider
                        Name="OffsetY2"
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="5"
                        Maximum="500"
                        Minimum="0"
                        Value="0" />
                </Grid>
            </GroupBox>
        </StackPanel>
    </democommon:DemoControl.Options>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <chart:SfChart
            Name="Chart1"
            Margin="10">

            <chart:SfChart.ColumnDefinitions>
                <chart:ChartColumnDefinition />
                <chart:ChartColumnDefinition />
            </chart:SfChart.ColumnDefinitions>

            <chart:SfChart.DataContext>
                <local:MultiLegendsViewModel />
            </chart:SfChart.DataContext>

            <chart:SfChart.Legend>

                <chart:ChartLegendCollection>
                    <chart:ChartLegend
                        CheckBoxVisibility="Visible"
                        DockPosition="{Binding ElementName=DockPosition, Path=SelectedItem}"
                        LegendPosition="{Binding ElementName=LegendPosition, Path=SelectedItem}"
                        OffsetX="{Binding ElementName=OffsetX, Path=Value, Mode=TwoWay}"
                        OffsetY="{Binding ElementName=OffsetY, Mode=TwoWay, Path=Value}"
                        Header="1st Column">
                    </chart:ChartLegend>

                    <chart:ChartLegend
                        x:Name="Legend1"
                        chart:SfChart.Column="1"
                        CheckBoxVisibility="Visible"
                        DockPosition="{Binding ElementName=DockPosition2, Path=SelectedItem}"
                        LegendPosition="{Binding ElementName=LegendPosition2, Path=SelectedItem}"
                        OffsetX="{Binding ElementName=OffsetX2, Path=Value, Mode=TwoWay}"
                        OffsetY="{Binding ElementName=OffsetY2, Mode=TwoWay, Path=Value}"
                        Header="2nd Column">
                    </chart:ChartLegend>

                </chart:ChartLegendCollection>

            </chart:SfChart.Legend>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    chart:SfChart.Column="0"
                    EdgeLabelsDrawingMode="Shift"
                    PlotOffset="10" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    RangePadding="Round" />
            </chart:SfChart.SecondaryAxis>

            <chart:ScatterSeries
                Interior="{StaticResource SeriesInterior1}"
                ItemsSource="{Binding}"
                Label="Series1"
                ScatterHeight="15"
                ScatterWidth="15"
                XBindingPath="Speed"
                YBindingPath="Rate" />

            <chart:SplineAreaSeries
                Interior="{StaticResource SeriesInterior1}"
                ItemsSource="{Binding}"
                Label="Series2"
                Opacity="0.5"
                XBindingPath="Speed"
                YBindingPath="Rate" />

            <chart:LineSeries
                x:Name="series1"
                Interior="{StaticResource SeriesInterior2}"
                ItemsSource="{Binding}"
                Label="Series3"
                Opacity="0.5"
                XAxis="{StaticResource catAxis}"
                XBindingPath="Speed"
                YBindingPath="Rate" />

            <chart:ScatterSeries
                x:Name="series2"
                Interior="{StaticResource SeriesInterior2}"
                ItemsSource="{Binding}"
                Label="Series4"
                Opacity="0.5"
                ScatterHeight="15"
                ScatterWidth="15"
                XAxis="{StaticResource catAxis}"
                XBindingPath="Speed"
                YBindingPath="Rate" />

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
