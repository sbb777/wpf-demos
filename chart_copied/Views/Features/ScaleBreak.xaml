<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.ScaleBreakDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    OptionsSize="250"
    mc:Ignorable="d">

    <democommon:DemoControl.DataContext>
        <local:ScalebreakViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <local:StringToDoubleConverter x:Key="stringToDoubleConverter" />
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.Options>
        <ScrollViewer>
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0,10,10,10"
                    HorizontalAlignment="Left"
                    FontWeight="SemiBold"
                    FontSize="12"
                    Text="Properties" />

                <TextBlock
                    Grid.Row="1"
                    Margin="0,10,5,10"
                    Text="Break Position"
                    FontSize="12"/>
                <ComboBox
                    x:Name="brk_position"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    FontSize="12"
                    ItemsSource="{democommon:EnumValuesExtension Type=chart:ScaleBreakPosition}"
                    SelectedIndex="0"
                    SelectedItem="{Binding CurrentBreakPosition}" />

                <StackPanel
                    x:Name="manualBreakPanel"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="0,5,0,0"
                    Orientation="Vertical">
                    <Expander
                        Grid.Row="5"
                        Grid.ColumnSpan="2"
                        Margin="0,0,5,0"
                        Header="Break1" FontSize="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />

                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                FontSize="12">
                                Start
                            </TextBlock>
                            <TextBox
                                x:Name="start1"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5"
                                FontSize="12"
                                Text="2000" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                FontSize="12"
                                Margin="5,10,10,10">
                                End
                            </TextBlock>
                            <TextBox
                                x:Name="end1"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5"
                                FontSize="12"
                                Text="7000" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                FontSize="12">
                                Line Type
                            </TextBlock>
                            <ComboBox
                                x:Name="linetype1"
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="5"
                                FontSize="12"
                                ItemsSource="{democommon:EnumValuesExtension Type=chart:BreakLineType}"
                                SelectedIndex="0" />

                            <TextBlock
                                x:Name="brk_spacingText"
                                Grid.Row="4"
                                Margin="5,10,10,10"
                                FontSize="12"
                                Text="Break Spacing" />
                            <TextBox
                                x:Name="brk_spacing"
                                Grid.Row="4"
                                Margin="5"
                                FontSize="12"
                                Grid.Column="1"
                                Text="5" />

                            <TextBlock
                                x:Name="brk_percentText"
                                Grid.Row="5"
                                Margin="5,10,10,10"
                                FontSize="12"
                                Text="Break Percent"
                                Visibility="{Binding PercentageVisibility, Mode=TwoWay}" />
                            <TextBox
                                x:Name="brk_percent"
                                Grid.Row="5"
                                Grid.Column="1"
                                Text="50"
                                Margin="5"
                                FontSize="12"
                                Visibility="{Binding PercentageVisibility, Mode=TwoWay}" />

                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                FontSize="12">
                                StrokeThickness
                            </TextBlock>
                            <Slider
                                x:Name="thickness1"
                                Grid.Row="6"
                                Grid.Column="1"
                                Maximum="2"
                                Minimum="1"
                                Margin="5"
                                VerticalAlignment="Center"
                                TickFrequency="0.1" />
                            <TextBlock
                                Grid.Row="7"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                FontSize="12">
                                Fill
                            </TextBlock>
                            <chart:ColorPicker
                                x:Name="color_picker1"
                                Grid.Row="7"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Margin="5"
                                Brush="White" />


                        </Grid>
                    </Expander>

                    <Expander
                        Grid.Row="6"
                        Grid.ColumnSpan="2"
                        Margin="0,10,5,0"
                        Header="Break2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                FontSize="12">
                                Start
                            </TextBlock>
                            <TextBox
                                x:Name="start2"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5"
                                FontSize="12"
                                Text="300" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="5,10,10,10">
                                End
                            </TextBlock>
                            <TextBox
                                x:Name="end2"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5"
                                FontSize="12"
                                Text="1500" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                FontSize="12">
                                Line Type
                            </TextBlock>
                            <ComboBox
                                x:Name="linetype2"
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="5"
                                FontSize="12"
                                ItemsSource="{democommon:EnumValuesExtension Type=chart:BreakLineType}"
                                SelectedIndex="0" />

                            <TextBlock
                                x:Name="brk_spacingText1"
                                Grid.Row="4"
                                Margin="5,10,10,10"
                                FontSize="12"
                                Text="Break Spacing" />
                            <TextBox
                                x:Name="brk_spacing1"
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="5"
                                FontSize="12"
                                Text="5" />

                            <TextBlock
                                x:Name="brk_percentText1"
                                Grid.Row="5"
                                Margin="5,10,10,10"
                                FontSize="12"
                                Text="Break Percent"
                                Visibility="{Binding PercentageVisibility, Mode=TwoWay}" />
                            <TextBox
                                x:Name="brk_percent1"
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="5"
                                FontSize="12"
                                Text="50"
                                Visibility="{Binding PercentageVisibility, Mode=TwoWay}" />


                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                FontSize="12">
                                StrokeThickness
                            </TextBlock>
                            <Slider
                                x:Name="thickness2"
                                Grid.Row="6"
                                Grid.Column="1"
                                Maximum="2"
                                Minimum="1"
                                Margin="5"
                                VerticalAlignment="Center"
                                TickFrequency="0.1" />
                            <TextBlock
                                Grid.Row="7"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                FontSize="12">
                                Fill
                            </TextBlock>
                            <chart:ColorPicker
                                x:Name="color_picker2"
                                Grid.Row="7"
                                Grid.Column="1"
                                Margin="5"
                                VerticalAlignment="Center"
                                Brush="White" />

                        </Grid>
                    </Expander>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </democommon:DemoControl.Options>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <chart:SfChart x:Name="ScaleChart" Margin="10"
                       Header="Mountains By Elevation">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    Header="Mountains"
                    LabelsIntersectAction="MultipleRows" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    x:Name="axis2"
                    BreakPosition="{Binding ElementName=brk_position, Path=SelectedItem}"
                    Header="Elevation (in metres)"
                    IsInversed="False">

                    <chart:NumericalAxis.AxisScaleBreaks>

                        <chart:ChartAxisScaleBreak
                            BreakPercent="{Binding ElementName=brk_percent, Path=Text, Mode=TwoWay, Converter={StaticResource stringToDoubleConverter}}"
                            BreakSpacing="{Binding ElementName=brk_spacing, Path=Text, Mode=TwoWay}"
                            End="{Binding ElementName=end1, Path=Text, Mode=TwoWay}"
                            Fill="{Binding ElementName=color_picker1, Path=Brush, Mode=TwoWay}"
                            LineType="{Binding ElementName=linetype1, Path=SelectedItem, Mode=TwoWay}"
                            Start="{Binding ElementName=start1, Path=Text, Mode=TwoWay}"
                            StrokeThickness="{Binding ElementName=thickness1, Path=Value, Mode=TwoWay}" />
                        <chart:ChartAxisScaleBreak
                            BreakPercent="{Binding ElementName=brk_percent1, Path=Text, Mode=TwoWay, Converter={StaticResource stringToDoubleConverter}}"
                            BreakSpacing="{Binding ElementName=brk_spacing1, Path=Text, Mode=TwoWay}"
                            End="{Binding ElementName=end2, Path=Text, Mode=TwoWay}"
                            Fill="{Binding ElementName=color_picker2, Path=Brush, Mode=TwoWay}"
                            LineType="{Binding ElementName=linetype2, Path=SelectedItem, Mode=TwoWay}"
                            Start="{Binding ElementName=start2, Path=Text, Mode=TwoWay}"
                            StrokeThickness="{Binding ElementName=thickness2, Path=Value, Mode=TwoWay}" />

                    </chart:NumericalAxis.AxisScaleBreaks>

                </chart:NumericalAxis>
            </chart:SfChart.SecondaryAxis>

            <chart:ColumnSeries
                EnableAnimation="True"
                ItemsSource="{Binding ScalebreakDatas}"
                ShowTooltip="True"
                XBindingPath="XData"
                YBindingPath="YData"
                ColorModel="{StaticResource CustomColor}"
                Palette="Custom"/>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>