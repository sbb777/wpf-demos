<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.AxisDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:AxisViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </democommon:DemoControl.Resources>

    <Grid>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Category Axis"  />
                    </StackPanel>
                </TabItem.Header>
                <ContentControl x:Name="contentcontrol">
                    <Grid>

                        <chart:SfChart
                            x:Name="Chart"
                            Margin="10"
                            Palette="Custom"
                            ColorModel="{StaticResource CustomColor}"
                            SideBySideSeriesPlacement="True"
                            Header="Internet Users - 2019">
                            <chart:SfChart.PrimaryAxis>
                                <chart:CategoryAxis
                                    x:Name="primary"
                                    LabelPlacement="BetweenTicks">
                                </chart:CategoryAxis>
                            </chart:SfChart.PrimaryAxis>
                            <chart:SfChart.SecondaryAxis>
                                <chart:NumericalAxis
                                    Maximum="80"
                                    Minimum="0" />
                            </chart:SfChart.SecondaryAxis>
                            <chart:ColumnSeries
                                x:Name="Series1"
                                EnableAnimation="True"
                                ItemsSource="{Binding CategoryData1}"
                                XBindingPath="XValue"
                                YBindingPath="YValue">
                                <chart:ColumnSeries.AdornmentsInfo>
                                    <chart:ChartAdornmentInfo
                                        LabelPosition="Inner"
                                        ShowLabel="True" />
                                </chart:ColumnSeries.AdornmentsInfo>
                            </chart:ColumnSeries>
                            <chart:ColumnSeries
                                x:Name="Series2"
                                EnableAnimation="True"
                                ItemsSource="{Binding CategoryData2}"
                                XBindingPath="XValue"
                                YBindingPath="YValue">
                                <chart:ColumnSeries.AdornmentsInfo>
                                    <chart:ChartAdornmentInfo
                                        LabelPosition="Inner"
                                        ShowLabel="True" />
                                </chart:ColumnSeries.AdornmentsInfo>
                            </chart:ColumnSeries>
                        </chart:SfChart>

                    </Grid>
                </ContentControl>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Numeric Axis" />
                    </StackPanel>
                </TabItem.Header>
                <ContentControl>
                    <Grid>
                        <chart:SfChart x:Name="Chart2" Margin="10"
                                       ColorModel="{StaticResource CustomColor}"
                                       Palette="Custom"
                                       Header="England vs West Indies">
                            
                            <chart:SfChart.Legend>
                                <chart:ChartLegend
                                    DockPosition="Bottom"
                                    ToggleSeriesVisibility="true" />
                            </chart:SfChart.Legend>
                            <chart:SfChart.PrimaryAxis>
                                <chart:CategoryAxis
                                    AxisLineOffset="2"
                                    Header="Death Overs"
                                    Interval="1"
                                    LabelPlacement="BetweenTicks"
                                    PlotOffset="2" />
                            </chart:SfChart.PrimaryAxis>
                            <chart:SfChart.SecondaryAxis>
                                <chart:NumericalAxis
                                    Interval="5"
                                    Maximum="25"
                                    Minimum="0"
                                    TickLineSize="0" />
                            </chart:SfChart.SecondaryAxis>
                            <chart:SfChart.Series>
                                <chart:ColumnSeries
                                    x:Name="series1"
                                    EnableAnimation="True"
                                    ItemsSource="{Binding NumericData}"
                                    Label="England"
                                    XBindingPath="Value"
                                    YBindingPath="Size">
                                    <chart:ColumnSeries.AdornmentsInfo>
                                        <chart:ChartAdornmentInfo  LabelPosition="Inner"
                                                                   ShowLabel="True"/>
                                    </chart:ColumnSeries.AdornmentsInfo>
                                </chart:ColumnSeries>
                                <chart:ColumnSeries
                                    x:Name="series2"
                                    EnableAnimation="True"
                                    ItemsSource="{Binding NumericData1}"
                                    Label="West Indies"
                                    XBindingPath="Value"
                                    YBindingPath="Size">
                                    <chart:ColumnSeries.AdornmentsInfo>
                                        <chart:ChartAdornmentInfo LabelPosition="Inner"
                                                                  ShowLabel="True"/>
                                    </chart:ColumnSeries.AdornmentsInfo>
                                </chart:ColumnSeries>
                            </chart:SfChart.Series>
                        </chart:SfChart>

                    </Grid>
                </ContentControl>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="DateTime Axis" />
                    </StackPanel>
                </TabItem.Header>
                <ContentControl>
                    <Grid>
                        <chart:SfChart Margin="10" x:Name="Chart3"
                                       ColorModel="{StaticResource CustomColor}"
                                       Palette="Custom"
                                       Header="Food Production - 2017">
                            <chart:SfChart.PrimaryAxis>
                                <chart:DateTimeAxis
                                    EdgeLabelsDrawingMode="Shift"
                                    Header="Production across year"
                                    LabelFormat="MMM-dd"/>
                            </chart:SfChart.PrimaryAxis>
                            <chart:SfChart.SecondaryAxis>
                                <chart:NumericalAxis Header="Growth (In metric tonnes)" />
                            </chart:SfChart.SecondaryAxis>
                            <chart:SfChart.Series>
                                <chart:FastLineSeries
                                    EnableAnimation="True"
                                    ItemsSource="{Binding DateTimeData}"
                                    ShowTooltip="True"
                                    XBindingPath="Date"
                                    YBindingPath="Growth" />
                            </chart:SfChart.Series>
                        </chart:SfChart>

                    </Grid>
                </ContentControl>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Logarithmic Axis" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <chart:SfChart
                        x:Name="LogarithmicChart"
                        Margin="10"
                        ColorModel="{StaticResource CustomColor}"
                        Palette="Custom"
                        Header="Product X Growth [1995 - 2005]">

                        <chart:SfChart.PrimaryAxis>
                            <chart:CategoryAxis
                                EdgeLabelsDrawingMode="Shift"
                                Header="Year"
                                Interval="2"
                                LabelFormat="yyyy"
                                PlotOffset="10"
                                ShowGridLines="False" />
                        </chart:SfChart.PrimaryAxis>

                        <chart:SfChart.SecondaryAxis>
                            <chart:LogarithmicAxis Header="Profit" SmallTicksPerInterval="5" />
                        </chart:SfChart.SecondaryAxis>

                        <chart:LineSeries
                            EnableAnimation="True"
                            ItemsSource="{Binding DataPoints}"
                            ShowTooltip="True"
                            XBindingPath="Year"
                            YBindingPath="Profit">
                            <chart:LineSeries.AdornmentsInfo>
                                <chart:ChartAdornmentInfo
                                    ShowMarker="True"
                                    Symbol="Ellipse" />
                            </chart:LineSeries.AdornmentsInfo>
                        </chart:LineSeries>

                    </chart:SfChart>

                </Grid>
            </TabItem>

        </TabControl>

    </Grid>


</democommon:DemoControl>
