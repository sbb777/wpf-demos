<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.StackingArea100ChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:StackingAreaChartViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="StackingArea100Chart"
            Margin="10"
            Palette="Custom"
            ColorModel="{StaticResource CustomColor}"
            Header="Road Accident Statistics(2009)">

            <chart:SfChart.Legend>
                <chart:ChartLegend
                    DockPosition="Bottom"/>
            </chart:SfChart.Legend>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    Header="Month"
                    LabelFormat="MMM"
                    PlotOffset="30"
                    ShowTrackBallInfo="True" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Death Counts (Percentage)" />
            </chart:SfChart.SecondaryAxis>

            <chart:StackingArea100Series
                chart:ChartTooltip.EnableAnimation="True"
                Canvas.ZIndex="3"
                EnableAnimation="True"
                ItemsSource="{Binding Accidents}"
                Label="Bus"
                Stroke="{StaticResource SeriesInterior1WithOpacity}"
                StrokeThickness="3"
                XBindingPath="Month"
                YBindingPath="Bus">
                <chart:StackingArea100Series.AdornmentsInfo>
                    <chart:ChartAdornmentInfo SegmentLabelContent="LabelContentPath" ShowLabel="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid Margin="{Binding Margin}">
                                    <Ellipse
                                        Width="30"
                                        Height="30"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Fill="White"
                                        Stroke="{StaticResource SeriesInterior1}"
                                        StrokeThickness="3" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe UI"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Foreground="Black"
                                        Text="{Binding Item.Bus}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:StackingArea100Series.AdornmentsInfo>
            </chart:StackingArea100Series>

            <chart:StackingArea100Series
                chart:ChartTooltip.EnableAnimation="True"
                Canvas.ZIndex="2"
                EnableAnimation="True"
                ItemsSource="{Binding Accidents}"
                Label="Car"
                Stroke="{StaticResource SeriesInterior2WithOpacity}"
                StrokeThickness="3"
                XBindingPath="Month"
                YBindingPath="Car">
                <chart:StackingArea100Series.AdornmentsInfo>
                    <chart:ChartAdornmentInfo SegmentLabelContent="LabelContentPath" ShowLabel="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid Margin="{Binding Margin}">
                                    <Ellipse
                                        Width="30"
                                        Height="30"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Fill="White"
                                        Stroke="{StaticResource SeriesInterior2}"
                                        StrokeThickness="3" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe UI"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Foreground="Black"
                                        Text="{Binding Item.Car}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:StackingArea100Series.AdornmentsInfo>
            </chart:StackingArea100Series>

            <chart:StackingArea100Series
                chart:ChartTooltip.EnableAnimation="True"
                EnableAnimation="True"
                ItemsSource="{Binding Accidents}"
                Label="Truck"
                Stroke="{StaticResource SeriesInterior3WithOpacity}"
                StrokeThickness="3"
                XBindingPath="Month"
                YBindingPath="Truck">
                <chart:StackingArea100Series.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        VerticalAlignment="Bottom"
                        SegmentLabelContent="LabelContentPath"
                        ShowLabel="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid Margin="{Binding Margin}">
                                    <Ellipse
                                        Width="30"
                                        Height="30"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Fill="White"
                                        Stroke="{StaticResource SeriesInterior3}"
                                        StrokeThickness="3" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe UI"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Foreground="Black"
                                        Text="{Binding Item.Truck}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:StackingArea100Series.AdornmentsInfo>
            </chart:StackingArea100Series>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
