<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.StackingLine100Chart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:StackingLineChartViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="StackingAreaChart"
            Margin="10"
            Palette="Custom"
            ColorModel="{StaticResource CustomColor}"
            Header="Monthly expense of a family">

            <chart:SfChart.Legend>
                <chart:ChartLegend
                    DockPosition="Bottom" />
            </chart:SfChart.Legend>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    PlotOffset="50" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Expenses (Percentage)"
                    Interval="20"
                    LabelFormat="0'%'"
                    PlotOffset="20" />
            </chart:SfChart.SecondaryAxis>

            <chart:StackingLine100Series
                EnableAnimation="True"
                ItemsSource="{Binding MonthlyExpense}"
                ShowTooltip="True"
                Label="Daughter"
                XBindingPath="Name"
                YBindingPath="Daughter">
                <chart:StackingLine100Series.AdornmentsInfo>
                    <chart:ChartAdornmentInfo Symbol="Ellipse">
                    </chart:ChartAdornmentInfo>
                </chart:StackingLine100Series.AdornmentsInfo>
            </chart:StackingLine100Series>

            <chart:StackingLine100Series
                EnableAnimation="True"
                ItemsSource="{Binding MonthlyExpense}"
                ShowTooltip="True"
                Label="Son"
                XBindingPath="Name"
                YBindingPath="Son">
                <chart:StackingLine100Series.AdornmentsInfo>
                    <chart:ChartAdornmentInfo Symbol="Ellipse">
                    </chart:ChartAdornmentInfo>
                </chart:StackingLine100Series.AdornmentsInfo>
            </chart:StackingLine100Series>

            <chart:StackingLine100Series
                EnableAnimation="True"
                ItemsSource="{Binding MonthlyExpense}"
                ShowTooltip="True"
                Label="Mother"
                XBindingPath="Name"
                YBindingPath="Mother">
                <chart:StackingLine100Series.AdornmentsInfo>
                    <chart:ChartAdornmentInfo Symbol="Ellipse">
                    </chart:ChartAdornmentInfo>
                </chart:StackingLine100Series.AdornmentsInfo>
            </chart:StackingLine100Series>

            <chart:StackingLine100Series
                EnableAnimation="True"
                ItemsSource="{Binding MonthlyExpense}"
                ShowTooltip="True"
                Label="Father"
                XBindingPath="Name"
                YBindingPath="Father">
                <chart:StackingLine100Series.AdornmentsInfo>
                    <chart:ChartAdornmentInfo Symbol="Ellipse">
                    </chart:ChartAdornmentInfo>
                </chart:StackingLine100Series.AdornmentsInfo>
            </chart:StackingLine100Series>
        </chart:SfChart>
    </Grid>

</democommon:DemoControl>
