<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.AnnotationInteractionDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:AnnotationInteractionViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <chart:SfChart x:Name="lineChart" Margin="10"
                       ColorModel="{StaticResource CustomColor}"
                       Palette="Custom"
                       Header="Japan's Population">

            <chart:SfChart.Annotations>
                <chart:LineAnnotation
                    CanDrag="True"
                    CanResize="True"
                    X1="3"
                    X2="5"
                    Y1="34"
                    Y2="38" />
                <chart:EllipseAnnotation
                    CanDrag="True"
                    CanResize="True"
                    X1="0.5"
                    X2="1.5"
                    Y1="42"
                    Y2="48" />
                <chart:RectangleAnnotation
                    CanDrag="True"
                    CanResize="True"
                    X1="4"
                    X2="6"
                    Y1="41"
                    Y2="43" />
                <chart:VerticalLineAnnotation
                    CanDrag="True"
                    CanResize="True"
                    CoordinateUnit="Axis"
                    X1="3" />
                <chart:LineAnnotation
                    CanDrag="True"
                    CanResize="True"
                    CoordinateUnit="Axis"
                    LineCap="Arrow"
                    X1="2"
                    X2="3"
                    Y1="48"
                    Y2="44" />
                <chart:HorizontalLineAnnotation
                    CanDrag="True"
                    CanResize="True"
                    CoordinateUnit="Axis"
                    Y1="40" />
                <chart:TextAnnotation
                    EnableEditing="True"
                    FontFamily="Segoe UI"
                    Text="Click here to add custom text"
                    X1="4.3"
                    Y1="33.6" />
            </chart:SfChart.Annotations>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    Header="Year"
                    LabelFormat="yyyy"
                    LabelPlacement="BetweenTicks"
                    ShowTrackBallInfo="True" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Population (In Millions)"
                    Maximum="50"
                    Minimum="30"
                    LabelExtent="15"/>
            </chart:SfChart.SecondaryAxis>

            <chart:LineSeries
                EnableAnimation="True"
                ItemsSource="{Binding power}"
                Label="Population in Japan"
                XBindingPath="Year"
                YBindingPath="Population">
                <chart:LineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        ShowMarker="True"
                        Symbol="Ellipse">
                    </chart:ChartAdornmentInfo>
                </chart:LineSeries.AdornmentsInfo>
            </chart:LineSeries>
        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
