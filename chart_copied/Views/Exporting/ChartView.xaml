<UserControl
    x:Class="syncfusion.chartdemos.wpf.ChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="21,33,35,38">
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart x:Name="ExportDemoChart"
                       ColorModel="{StaticResource CustomColor}"
                       Palette="Custom">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    Header="Month"
                    PlotOffset="20" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Degree ( In Celsius )"
                    RangePadding="Round" />
            </chart:SfChart.SecondaryAxis>

            <!--  Add Series to the Chart  -->
            <chart:SplineSeries
                ItemsSource="{Binding ClimateData}"
                Label="Sports"
                XBindingPath="Month"
                YBindingPath="Temperature">
                <chart:SplineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        ShowLabel="True"
                        ShowMarker="True" SymbolHeight="20" SymbolWidth="20"
                        Symbol="Ellipse" Background="Transparent"/>
                </chart:SplineSeries.AdornmentsInfo>
            </chart:SplineSeries>

        </chart:SfChart>

    </Grid>
</UserControl>
