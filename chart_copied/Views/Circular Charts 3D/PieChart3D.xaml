<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.PieChart3D"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interact="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:PieChart3DViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <local:PieChart3DColorConverter x:Key="colorConv" />
        <local:CornerRadiusConverter x:Key="cornerRadiusConverter" />

        <!--  ToolTip Template  -->
        <DataTemplate x:Key="TooltipTemplate">
            <Border IsHitTestVisible="False"
                    Background="{Binding Interior}"
                    BorderBrush="White"
                    BorderThickness="1" 
                    CornerRadius="{Binding Converter={StaticResource cornerRadiusConverter}, ConverterParameter={x:Reference Name=PieChart}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5,3,5,3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="11"
                        IsHitTestVisible="False"
                        Text="{Binding Item.Expense}" />
                    <TextBlock
                        Margin="5,3,5,3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="11"
                        Text=":" />
                    <TextBlock
                        Margin="5,3,5,3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="11"
                        IsHitTestVisible="False"
                        Text="{Binding YData}" />
                </StackPanel>
            </Border>
        </DataTemplate>

    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart3D
            x:Name="PieChart"
            Grid.RowSpan="2"
            Margin="20"
            HorizontalAlignment="Center"
            Depth="30"
            EnableRotation="True"
            PerspectiveAngle="127.41573033707868"
            Rotation="44"
            Tilt="-45"
            Header="Communication Medium">

            <interact:Interaction.Behaviors>
                <local:RotateAnimationBehavior />
            </interact:Interaction.Behaviors>

            <!--  Legend  -->
            <chart:SfChart3D.Legend>
                <chart:ChartLegend
                    BorderThickness="1"
                    CheckBoxVisibility="Visible"
                    CornerRadius="0"
                    DockPosition="Bottom"
                    RenderTransformOrigin="0.5,0.5" />
            </chart:SfChart3D.Legend>

            <!--  PieSeries3D  -->
            <chart:PieSeries3D
                x:Name="pieSeries"
                chart:ChartTooltip.EnableAnimation="True"
                ColorModel="{StaticResource CustomColor}"
                EnableAnimation="True"
                ItemsSource="{Binding Expenditure}"
                Label="Expenditures"
                LabelPosition="Outside"
                Palette="Custom"
                ShowTooltip="True"
                TooltipTemplate="{StaticResource TooltipTemplate}"
                XBindingPath="Expense"
                YBindingPath="Amount">
            </chart:PieSeries3D>
        </chart:SfChart3D>
    </Grid>
</democommon:DemoControl>
