<UserControl
    x:Class="syncfusion.chartdemos.wpf.PieSeriesDemo3D"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <syncfusion:SfChart3D
            x:Name="PieChart"
            Depth="30"
            EnableRotation="True"
            PerspectiveAngle="90"
            Rotation="-4"
            Tilt="-22"
            Header="Application Performance Metrics">

            <!--  PieSeries3D  -->
            <syncfusion:PieSeries3D
                x:Name="PieSeries"
                ConnectorType="Bezier"
                EnableSmartLabels="True"
                EndAngle="{Binding EndAngle}"
                ItemsSource="{Binding}"
                LabelPosition="Outside"
                StartAngle="{Binding StartAngle}"
                XBindingPath="Utilization"
                YBindingPath="ResponseTime"
                ColorModel="{StaticResource CustomColor}"
                Palette="Custom">

                <!--  AdornmentsInfo  -->
                <syncfusion:PieSeries3D.AdornmentsInfo>
                    <syncfusion:ChartAdornmentInfo3D
                        AdornmentsPosition="Bottom"
                        ConnectorHeight="35"
                        SegmentLabelContent="Percentage"
                        SegmentLabelFormat="##.#"
                        ShowConnectorLine="True"
                        ShowLabel="True" />
                </syncfusion:PieSeries3D.AdornmentsInfo>
            </syncfusion:PieSeries3D>

        </syncfusion:SfChart3D>
    </Grid>
</UserControl>
