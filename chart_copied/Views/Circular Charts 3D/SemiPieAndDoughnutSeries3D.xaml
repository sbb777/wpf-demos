<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.SemiPieAndDoughnutSeries3D"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:SemiPieAndDoughnutChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <local:ViewConverter x:Key="ViewCheckConverter" />
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.Options>
        <WrapPanel>
            <StackPanel>
                <ComboBox
                    x:Name="contentCombo"
                    Width="160"
                    Margin="5"
                    FontSize="12"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    IsEditable="False"
                    ItemsSource="{Binding SeriesType}"
                    SelectedIndex="0" />
            </StackPanel>
            <StackPanel>
                <TextBlock
                    Margin="5"
                    FontSize="12"
                    Text="Start Angle" />
                <Slider
                    x:Name="StartSlider"
                    Width="160"
                    Margin="5,0,5,5"
                    Maximum="360"
                    Minimum="0"
                    Value="{Binding StartAngle}" />
            </StackPanel>
            <StackPanel>
                <TextBlock
                    Margin="5"
                    FontSize="12"
                    Text="End Angle" />
                <Slider
                    x:Name="EndSlider"
                    Width="160"
                    Margin="5,0,5,5"
                    Maximum="360"
                    Minimum="0"
                    Value="{Binding EndAngle}" />
            </StackPanel>
        </WrapPanel>
    </democommon:DemoControl.Options>

    <Grid>
        <ContentControl x:Name="contentcontrol" Content="{Binding ElementName=contentCombo, Path=SelectedItem, Converter={StaticResource ViewCheckConverter}}" />
    </Grid>
</democommon:DemoControl>
