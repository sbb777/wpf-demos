<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.ZoomPanBehavior"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="postfixLabelTemplate">
            <TextBlock Text="%" FontSize="10" />
        </DataTemplate>

    </democommon:DemoControl.Resources>

    <democommon:DemoControl.DataContext>
        <local:LoadDetailViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <chart:SfChart
            x:Name="ZoomBehaviorChart"
            Margin="10"
            Palette="Custom"
            ColorModel="{StaticResource CustomColor}"
            IsManipulationEnabled="True"
            Header="Server CPU Load">

            <chart:SfChart.Behaviors>
                <chart:ChartZoomPanBehavior
                    EnableMouseWheelZooming="True"
                    EnablePanning="True"
                    EnablePinchZooming="True"
                    EnableSelectionZooming="False"
                    EnableZoomingToolBar="True"
                    HorizontalPosition="Right"
                    ResetOnDoubleTap="True"
                    ToolBarItemHeight="30"
                    ToolBarItemMargin="5"
                    ToolBarItemWidth="30"
                    ZoomMode="XY" />
            </chart:SfChart.Behaviors>

            <chart:SfChart.PrimaryAxis>
                <chart:DateTimeAxis
                    LabelFormat="MMM, yyyy"
                    Header="Date">
                </chart:DateTimeAxis>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    PostfixLabelTemplate="{StaticResource postfixLabelTemplate}"
                    Header="CPU Load">
                </chart:NumericalAxis>
            </chart:SfChart.SecondaryAxis>

            <chart:FastLineSeries
                EnableAnimation="True"
                ItemsSource="{Binding LoadDetails}"
                StrokeLineJoin="Round"
                XBindingPath="Date"
                YBindingPath="Load" />
        </chart:SfChart>

    </Grid>
</democommon:DemoControl>