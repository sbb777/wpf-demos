<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.CrossHairBehavior"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:CurrencyDataViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <chart:SfChart
            x:Name="BehaviorChart"
            Margin="10"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom"
            Header="Population growth of various years">

            <!--  CrossHairBehavior  -->
            <chart:SfChart.Behaviors>
                <chart:ChartCrossHairBehavior/>
            </chart:SfChart.Behaviors>

            <chart:SfChart.PrimaryAxis>
                <chart:DateTimeAxis
                    LabelFormat="yyyy"
                    ShowGridLines="False"
                    ShowTrackBallInfo="True" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    ShowTrackBallInfo="True" />
            </chart:SfChart.SecondaryAxis>

            <chart:LineSeries
                        EnableAnimation="True"
                        ItemsSource="{Binding CurrencyDetails}"
                        XBindingPath="Date"
                        YBindingPath="CurrencyValue">
            </chart:LineSeries>

        </chart:SfChart>

    </Grid>
</democommon:DemoControl>
